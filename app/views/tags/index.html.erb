<h1>All Tags</h1>

<%= link_to "<< Back to Articles List", articles_path, class: "new_article" %>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag, tag_path(tag) %>
      <%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"}%>
    </li>
  <% end %>
</ul>

